<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

    <!-- 订单图标 -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:contentDescription="@string/orderImage"
        android:src="@drawable/order" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 订单号 -->

            <TextView
                android:id="@+id/order_no_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 订单日期 -->

            <TextView
                android:id="@+id/order_date_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 流水号 -->

            <TextView
                android:id="@+id/order_sysNo_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- 办事处 -->

            <TextView
                android:id="@+id/order_agency_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- 营业员 -->

            <TextView
                android:id="@+id/order_saler_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 品名 -->

            <TextView
                android:id="@+id/order_productName_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- 型号 -->

            <TextView
                android:id="@+id/order_model_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- 数量 -->

            <TextView
                android:id="@+id/order_qty_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:contentDescription="@string/orderImage"
        android:src="@drawable/go" />

</LinearLayout>