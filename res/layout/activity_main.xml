<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.truly.ic.SalePlatform.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/text_from_date_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="@string/fromDateStr"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/toStr" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/text_to_date_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="@string/toDateStr"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />
    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/text_bill_no_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/billNoStr"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="success" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/but_search_main_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/search"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_type="success" />

</LinearLayout>